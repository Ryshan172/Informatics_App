<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HydroManagement"
    android:background="@drawable/aqua">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Water Management"
        android:textColor="@android:color/white"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:paddingVertical="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_5sdp">

    </TextView>

    <LinearLayout
        android:id="@+id/linear_layouthome1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_50sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/backblue"
                >

                <ImageView
                    android:id="@+id/reporthydro_btn"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@android:color/white"
                    android:src="@drawable/issue">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_10ssp"
                    android:background="@android:color/white"
                    android:text="Report issues"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textAllCaps="false">
                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/stathydro">

                <ImageView
                    android:id="@+id/checkhydro_btn"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:src="@drawable/stats"
                    android:background="@android:color/white">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_10ssp"
                    android:background="@android:color/white"
                    android:text="Check issues"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textAllCaps="false">
                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>


    <LinearLayout
        android:id="@+id/linear_layouthome2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_below="@id/linear_layouthome1">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_110sdp"
            android:layout_height="@dimen/_140sdp"
            android:layout_margin="@dimen/_5sdp">

            <LinearLayout
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@color/emerald"
                >

                <ImageView
                    android:id="@+id/helphydro_btn"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:src="@drawable/question"
                    android:background="@android:color/white">
                </ImageView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:textSize="@dimen/_10ssp"
                    android:background="@android:color/white"
                    android:text="Help"
                    android:textColor="@android:color/black"
                    android:textAlignment="center"
                    android:textAllCaps="false">
                </TextView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>




    </LinearLayout>




</RelativeLayout>